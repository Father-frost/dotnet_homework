@using HelpDesk_BLL.Contracts.Identity
@using HelpDesk_DomainModel.Models.Identity
@using HelpDesk_MVC.Controllers
@using HelpDesk_MVC.Controllers.Identity
@using HelpDesk_MVC.Enums
@using System.Linq

@using (Html.BeginForm(
							actionName: nameof(UserController.Delete),
							controllerName: Html.ViewContext.RouteData.Values["controller"].ToString(),
							FormMethod.Post))
{

	<div class="card" style="width: 50rem;">
		<div class="card-body">
			<h4 class="card-title">Are you sure you want to delete this?</h4>
			<h5 class="card-subtitle"><u>User's Details</u></h5>
			<p class="card-text">@nameof(Model.Id) : @Model.Id</p>
			<p class="card-text">@nameof(Model.FirstName) : @Model.FirstName</p>
			<p class="card-text">@nameof(Model.LastName) : @Model.LastName</p>
			<p class="card-text">@nameof(Model.Role) : @Model.Role</p>
			<p class="card-text">@nameof(Model.Email) : @Model.Email</p>
			<a href="@Url.Action(nameof(UserController.List))" class="card-link">Back to list</a>
			<!--submit button-->
			<div>
				<input type="submit" value="Delete" class="btn btn-success m-2" />
			</div>
		</div>
	</div>

}