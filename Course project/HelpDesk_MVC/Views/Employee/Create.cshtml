@using HelpDesk_DomainModel.Models.Identity
@using HelpDesk_MVC.Controllers
@using HelpDesk_MVC.Enums
@using System.Linq
@model Employee;

<h2>Create Employee</h2>

<!--Form for adding employee-->
@using (Html.BeginForm(
			actionName: nameof(EmployeeController.Create),
			controllerName: Html.ViewContext.RouteData.Values["controller"].ToString(),
			FormMethod.Post))
{
	@Html.AntiForgeryToken()

	//Position
	<div class="form-group">
		@Html.LabelFor(model => model.Post, new { @class = "form-label m-2" })
		@Html.DropDownListFor(model => model.Post,
                Html.GetEnumSelectList<HelpDesk_MVC.Enums.PostEnum>(),
				null,
				new { @class = "form-select" })
	</div>

	//Eployee's skills
	<div class="form-group">
		@Html.LabelFor(model => model.Skills, new { @class = "form-label m-2" })
		@Html.TextAreaFor(model => model.Skills, new { @class = "form-control" })
	</div>

	<!-- Employee's first name -->
	<div class="row">
		<div class="col">
			@Html.LabelFor(model => model.Experience, new { @class = "form-label m-2" })
			@Html.TextBoxFor(model => model.Experience, new { @class = "form-control" })
			@Html.ValidationMessageFor(model => model.Experience, "", new { @class = "text-danger" })
		</div>

		<!-- Employee's last name -->
		<div class="col">
			@Html.LabelFor(model => model.Rating, new { @class = "form-label m-2" })
			@Html.TextBoxFor(model => model.Rating, new { @class = "form-control" })
			@Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })
		</div>
	</div>


	//submit button
	<div class="form-group">
		<input type="submit" value="Create" class="btn btn-success m-2" />
	</div>

}