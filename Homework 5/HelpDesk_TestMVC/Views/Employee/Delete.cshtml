@using HelpDesk_TestMVC.Controllers
@using HelpDesk_TestMVC.Enums
@using System.Linq

@using (Html.BeginForm(
							actionName: nameof(EmployeeController.Delete),
							controllerName: Html.ViewContext.RouteData.Values["controller"].ToString(),
							FormMethod.Post))
{

	<div class="card" style="width: 50rem;">
		<div class="card-body">
			<h4 class="card-title">Are you sure you want to delete this?</h4>
			<h5 class="card-subtitle"><u>Employee's Details</u></h5>
			<p class="card-text">@nameof(Model.Id) : @Model.Id</p>
			<p class="card-text">@nameof(Model.FullName) : @Model.FullName</p>
			<p class="card-text">@nameof(Model.Post) : @Model.Post</p>
			<p class="card-text">@nameof(Model.Skills) : @Model.Skills</p>
			<a href="@Url.Action(nameof(EmployeeController.Index))" class="card-link">Back to list</a>
			<!--submit button-->
			<div>
				<input type="submit" value="Delete" class="btn btn-success m-2" />
			</div>
		</div>
	</div>

}